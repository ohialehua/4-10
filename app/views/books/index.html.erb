  <div class="container">
  <div class="row">
  <%= render 'users/sidemenu', book:@book, user:@user %>
  </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
          <td><%= attachment_image_tag @user, :profile_image_id, size: "40x40", fallback: "no_image.jpg"%></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.opinion %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>