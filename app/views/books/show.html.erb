  <div class="container">
  <div class="row">
  <%= render 'users/sidemenu', book:@newbook, user:@user %>
  </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <td>
              <%= attachment_image_tag @user, :profile_image_id, size: "40x40", fallback: "no_image.jpg"%>
              <br><%= link_to @user.name, user_path(@user.id) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
        <% if @book.user == current_user %>
          <td>
            <a class="btn btn-success btn-sm btn-block mb-3" href="/books/<%= @book.id %>/edit">Edit</a>
          </td>
          <td>
            <%= button_to "Destroy", {controller: 'books', action: 'destroy'}, {method: :delete, class: "btn btn-danger btn-sm btn-block"} %>
          </td>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>