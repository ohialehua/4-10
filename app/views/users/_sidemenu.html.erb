<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, size: "80x80", fallback: "no_image.jpg"%>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="edit_user_path(user.id)"></a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, local:true do |f| %>
      <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title, class:"form-control" %>
      </div>
      <div class="form-group">
      <label>Opinion</label>
      <%= f.text_area :opinion, class:"form-control" %>
      </div>
      <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
      </div>
      <% end %>
    </div>